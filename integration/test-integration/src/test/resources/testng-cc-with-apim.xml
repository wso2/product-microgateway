        <classes>
            <class name="org.wso2.choreo.connect.tests.setup.withapim.CcShutdownExecutor"/>
            <class name="org.wso2.choreo.connect.tests.setup.withapim.ApimShutdownExecutor"/>
        </classes>
    </test>
</suite>
